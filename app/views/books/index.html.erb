<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

<h1>Books</h1>
<table>
  <tr>
    <thead>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
    </thead>
  </tr>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Edit" ,edit_book_path(book.id)%></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are yuo sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
