<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
     <%= render 'books/list' %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
    <table>
     <tr>
      <thead>
       <th colspan="3"></th>
       <th>Title</th>
       <th>Opinion</th>
      </thead>
    </tr>
      <tbody>
      <% @book.each do |book| %>
       <tr>
        <td><%= image_tag @user.get_profile_image(100,100) %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
       </tr>
      <% end %>
      </tbody>
     </table>
    </div>
 </div>
</div>


